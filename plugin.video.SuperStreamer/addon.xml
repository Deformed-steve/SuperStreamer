<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.SuperStreamer"
       name="SuperStreamer"
       version="0.1.0"
       provider-name="YourName">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Movies & TV Browser like your Vercel app</summary>
        <description lang="en">Browse movies, TV shows, search, and play videos fullscreen. This is intended for private use only. </description>
        <platform>all</platform>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
    </extension>
</addon>

