<addon id="plugin.video.superstreamer"
       name="SuperStreamer"
       version="0.1.0"
       provider-name="DeformedSteve">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Movies and TV Browser</summary>
        <description lang="en">Browse movies, TV shows, search, and play videos</description>
        <platform>all</platform>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
    </extension>
</addon>
